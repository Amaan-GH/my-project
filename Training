global string $lastCreatedTree = "";

//Delete the last created tree
global proc DeleteLastTree() {
    global string $lastCreatedTree;  // Declare it as global

    if ($lastCreatedTree != "") {
        // Delete the last created tree
        delete $lastCreatedTree;
        
        $lastCreatedTree = "";
    } else {
        confirmDialog -ma "center" -m "No trees in scene";
    }
}

// Create Tree 1
global proc CreateTree() {
    global string $lastCreatedTree; 
    string $newTree[] = `duplicate -rr "Tree_1"`;
    setAttr ($newTree[0] + ".visibility") 1;
    
    $lastCreatedTree = $newTree[0];
    
    // Move the tree
    move (rand(-12,12)) 0 (rand(-12,12)) $newTree[0];
    
    // Rotate the tree
    int $randY = (int) (`rand -1 1` * 360);   
    rotate 0 $randY 0 $newTree[0];
    
    // Scale the tree
    scale (rand(0.8,1.4)) (rand(0.8,1.4)) (rand(0.8,1.4)) $newTree[0];
}

