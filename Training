//create ui
window -title "Buttons" -widthHeight 200 100 doesEverythingUI;
columnLayout -adjustableColumn true -rowSpacing 10;
    button -label "Create a Cube" -command "polyCube";
    button -label "Create wheels" - command "polySphere";
setParent ..;


showWindow doesEverythingUI;

//Amaans Code, group task
global proc createCube() {
    // Creates a cube
    global string $happyCube[]; 
    $happyCube = `polyCube -name "happyLittleCube"`;

string $shader = `shadingNode -asShader lambert -name "redLambert"`;
setAttr ($shader + ".color") -type double3 1 0 0;

string $shadingGroup = `sets -renderable true -noSurfaceShader true -empty -name ($shader + "SG")`;
connectAttr -f ($shader + ".outColor") ($shadingGroup + ".surfaceShader");

select $happyCube[0];
sets -e -forceElement $shadingGroup $happyCube[0];
}



